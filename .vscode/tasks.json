{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Package",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "source ${workspaceFolder}/venv/bin/activate && PYTHONPATH=src python -m pytest -v",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Package in Development Mode",
            "type": "shell",
            "command": "source ${workspaceFolder}/venv/bin/activate && pip install -e .",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run CLI - Info",
            "type": "shell",
            "command": "source ${workspaceFolder}/venv/bin/activate && obsidian-cli info",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run CLI - Help",
            "type": "shell",
            "command": "source ${workspaceFolder}/venv/bin/activate && obsidian-cli --help",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}